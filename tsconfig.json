{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": false
  },
  "include": ["src", "test"],
  "exclude": []
}
